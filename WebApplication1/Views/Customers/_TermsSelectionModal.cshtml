                @*     <div class="margin-vertical"> *@
                @*         <div class="col-md-3"> *@
                @*             <label>Payment Rate (in %)</label> *@
                @*         </div> *@
                @*         <div class="col-md-9"> *@
                @*             <input type="number" id="paymentRate" class="form-control"> *@
                @*         </div> *@
                @*     </div> *@
                @* </div> *@
                @* <div class="row form-group "> *@
                @*     <div class="margin-vertical"> *@
                @*         <div class="col-md-3"> *@
                @*             <label>Collateral</label> *@
                @*         </div> *@
                @*         <div class="col-md-9"> *@
                @*             <input type="text" id="collateral" class="form-control"> *@
                @*         </div> *@
                @*     </div> *@
                @* </div> *@
                <div class="row form-group">
                    <div class="col-md-6 col-sm-6 col-xs-6 align-left">
                        <button id="myPrevToLoanDBtn">Prev</button>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6  align-right">
                        <button id="myLoanSecondBtn">Next</button>
                    </div>
                </div>



            </form>
        </div>
    </div>

</div>





