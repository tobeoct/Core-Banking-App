@model WebApplication1.ViewModels.CustomerAccountViewModel
<div id="myAccountDetailsModal" class="modal ">

    <!-- Modal content -->
    <div class="modal-content animated ">
        <span class="close">&times;</span>
        <div>
            <div class=" padding-horizontal bordered-bottom align-left">
                <h3 class="alt-color bold-text">Enter Customer Account Details</h3>
            </div>
            
            <div class="alert alert-danger" id="errorMessage"></div>
            <div class="alert alert-success" id="successMessage"></div>
            <form method="post" id="customerAccountDetailsForm">
                <div class="row form-group">
                    <div class="container">
                        <p><span>Account Type : </span><b><span id="accountTypeDisplay"></span></b></p>
                    </div>
                    
                </div>
                <div class="row form-group ">
                    <div class="margin-vertical">
                        <div class="col-md-3">
                            <label>Account Name</label>
                        </div>
                        <div class="col-md-9">
                            <input type="text" name="accountName" id="accountName" class="form-control" required>
                        </div>
                    </div>
                </div>

                <div class="row form-group ">
                    <div class="margin-vertical">
                        <div class="col-md-3">
                            <label>Customer</label>
                        </div>
                        <div class="col-md-9">
                            <select class="form-control" id="customerId" required>
                                <option  value="0">Select Customer</option>
                                @foreach (var customer in Model.Customers)
                                {
                                    <option value="@customer.Id">@customer.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row form-group ">
                    <div class="margin-vertical">
                        <div class="col-md-3">
                            <label>Branch</label>
                        </div>
                        <div class="col-md-9">
                            <select class="form-control" id="branchId" required>
                                <option value="0">Select Branch</option>
                                @foreach (var branch in Model.Branches)
                                {
                                    <option value="@branch.Id">@branch.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 align-left">
                        <button id="myPrevBtn">Prev</button>
                    </div>
                    <div class="col-md-6 align-right">
                        <button id="myAccountDetailsBtn">Create Account<img src="~/Content/Images/loader2.gif" style="max-width: 50px;" class="loader icon"></button>
                    </div>
                </div>
               
            </form>
