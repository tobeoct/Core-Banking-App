@using WebApplication1.Models
@model WebApplication1.Models.Customer

@{
    ViewBag.Title = "Customer Management";
    if (User.IsInRole(RoleName.ADMIN_ROLE))
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
}

@Html.Partial("_AddCustomerModal")
@Html.Partial("_EditCustomerModal")
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="underline animated fadeInLeft">Customer Management</h1>
        </div>
    </div>
</div>
<div class="row margin-vertical">
    <div class="row padding-horizontal padding-vertical">
        <div class="container container-fluid">
            <p class="align-right grey-color animated fadeInRight ">3 Customers</p>
        </div>

    </div>
    <div class="container bg-white shadow">

        <div class="row align-right padding-horizontal">
            <button id="myBtn" class="customerBtn">Add new Customer</button>
        </div>




        <div class="row padding-horizontal">
            
            <table id="customers" class="table table-striped table-responsive small-text animated fadeInUp ">
                <thead class="padding-vertical">
                    <tr>
                        <th>Customer Name</th>
                        <th>Customer ID</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody></tbody>
            </table>
        </div>


    </div>

</div>

@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "id"
                    },
                    {
                        data: "email"
                    },
                    {
                        data: "gender"
                    },
                    {
                        data: "id",

                        render: function (data) {
                            return "<p class='js-delete btn btn-primary '  style='margin:auto;cursor:pointer;' id=" +
                                data +
                                " onclick='EditCustomer(" +
                                data +
                                ");'>Edit</p>";
                        }
                    }
                ]
            });
            $("#customers ").on("click","js-delete", function () {
                var button = $(this);
                //alert("Delete");
                bootbox.confirm("Are you sure you want to delete this branch", function () {
                    if (result) {
                        $.ajax({
                            url: "api/branches/" + button.attr("data-branch-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });

        });
    </script>
}
