@model WebApplication1.ViewModels.EditProfileViewModel
<div class="col-md-8 col-sm-6 col-xs-12 " style="position: relative">
    <div class=" margin-vertical bordered-bottom align-center" style="padding-top: 1px; padding-bottom: 30px;">
        <h3 class="grey-color animated fadeInDown">Edit Profile</h3>
    </div>
    <div class="margin-vertical padding-horizontal">
        @using (Html.BeginForm("Save", "UserAccounts"))
        {

            <div class="row form-group animated fadeInUp">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="margin-vertical">
                    <div class="col-md-2 ">
                        @Html.LabelFor(m => m.ApplicationUser.FullName)
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ApplicationUser.FullName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ApplicationUser.FullName)
                    </div>
                </div>
            </div>
            <div class="row form-group animated fadeInUp">
                <div class="margin-vertical">
                    <div class="col-md-2 ">
                        @Html.LabelFor(m => m.ApplicationUser.UserName)
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ApplicationUser.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ApplicationUser.UserName)
                    </div>
                </div>
            </div>
            <div class="row form-group animated fadeInUp">
                <div class="margin-vertical">
                    <div class="col-md-2 ">
                        @Html.LabelFor(m => m.ApplicationUser.Email)
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ApplicationUser.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ApplicationUser.Email)
                    </div>
                </div>
            </div>
            <div class="row form-group animated fadeInUp">
                <div class="margin-vertical">
                    <div class="col-md-2 ">
                        @Html.LabelFor(m => m.ApplicationUser.PhoneNumber)
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ApplicationUser.PhoneNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ApplicationUser.PhoneNumber)
                    </div>
                </div>
            </div>
            <div class="row form-group animated fadeInUp">
                <div class="margin-vertical">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.ApplicationUser.BranchId)
                    </div>
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.ApplicationUser.BranchId, new SelectList(Model.Branches, "Id", "Name"), "Select Branch", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ApplicationUser.BranchId)
                    </div>
                </div>
            </div>
            <div>
                @Html.HiddenFor(m => m.ApplicationUser.Id)
            </div>
            <div class="row form-group ">
                <div class="margin-vertical">
                    <div class="col-md-6 col-sm-6 col-xs-6 align-left animated fadeInLeft">
                        
                    </div>
                    <div class="col-md-6  col-sm-6 col-xs-6 align-right animated fadeInRight">
                        <button>Save Changes</button>
                    </div>
                </div>
            </div>
        }
        @using (Html.BeginForm("ResetPassword", "UserAccounts", FormMethod.Post, new { id = "resetForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <a type="submit" class=" blue-color"><i class="fa fa-redo" style="margin-right: 5px;"></i>Reset Password</a>
            </div>
            <div>
                @Html.HiddenFor(m => m.ApplicationUser.Id)
                @Html.HiddenFor(m => m.ApplicationUser.Email)
            </div>
        }
    </div>
</div>
