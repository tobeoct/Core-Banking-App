@*                         </div> *@
@*                     </div> *@
@*                 </div> *@

                <div class="form-group">
                    
                    @Html.HiddenFor(m => m.Branch.Id)

                </div>
                <div class="align-right">
                    <button type="submit" id="enterBtn">Add Branch<img src="~/Content/Images/loader2.gif" style="max-width: 50px;" class="loader icon"></button>
                </div>


            }

        </div>
    </div>

</div>

