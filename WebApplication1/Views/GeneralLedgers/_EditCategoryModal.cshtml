@* @model WebApplication1.ViewModels.GLCategoryViewModel *@
<div id="myEditGLCategoryModal" class="modal ">

    <!-- Modal content -->
    <div class="modal-content animated ">
        <span class="close">&times;</span>
        <div class="alert alert-danger alert-dismissible" id="errorMessage"></div>
        <div class="alert alert-success alert-dismissible" id="successMessage"></div>

        <form>
            <div class=" padding-horizontal bordered-bottom align-left">
                <h3 class="alt-color bold-text">Edit GL Category</h3>
            </div>
           
                <div class="row form-group ">
                    <div class="margin-vertical">
                        <div class="col-md-3">
                            <label for="name">Name</label>
                        </div>
                        <div class="col-md-9">
                           <input type="text" id="name" class="form-control"/>


                        </div>
                    </div>
                </div>
               

                <div class="row form-group ">
                    <div class="margin-vertical">
                        <div class="col-md-3">
                            <label>Description</label>
                        </div>
                        <div class="col-md-9">
                           <input type="text" id="description" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                   
                       
                    <input type="hidden" id="hidden"/>
                       

                </div>
                <div class="align-right">
                    <button id="myEditGLCategoryBtn">Update GL Category<img src="~/Content/Images/loader2.gif" style="max-width: 50px;" class="loader icon"></button>
                </div>


            

        </form>
    </div>

</div>




