@model WebApplication1.ViewModels.GLPostingViewModel
<div id="myAddGLPostingModal" class="container bg-white shadow">

    <div class="row padding-horizontal">

        <div>
            <div class=" bordered-bottom row ">
                <div class="col-md-6 col-sm-6 col-xs-6 align-left">
                    <h3 class="alt-color bold-text align-left ">Make GL Posting </h3>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6 align-right">
                    <p class="grey-color">Hit Tab to move to next field</p>
                </div>

            </div>
            <div class="alert alert-danger alert-dismissible" id="errorMessage"></div>
            <div class="alert alert-success alert-dismissible" id="successMessage"></div>

            <form id="glPostingForm" class="padding-horizontal">
                <table>
                    <thead>
                    <tr>
                       
                        <th>Gl Debit Account</th>
                        <th>GL Credit Account</th>
                        <th>Amount</th>
                        <th>Narration</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                       
                        <td class="form-group">
                            <select class="form-control" id="glDebitAccountId" required>
                                <option value="0">Select GL Debit Account</option>
                                @foreach (var account in Model.GlAccounts)
                                {
                                    <option value="@account.Id">@account.Name</option>
                                }
                            </select>
                        </td>
                        <td class="form-group">
                            <select class="form-control" id="glCreditAccountId" required>
                                <option value="0">Select GL Credit Account</option>
                                @foreach (var account in Model.GlAccounts)
                                {
                                    <option value="@account.Id">@account.Name</option>
                                }
                            </select>
                        </td>
                        <td class="form-group">
                            <input type="number" id="amount" class="form-control"> 
                        </td>
                        <td class="form-group">
                            <input type="text" id="narration" class="form-control">
                        </td>
                    </tr>
                    </tbody>
                </table>
                              
            </form>
            <div class="align-right">
                <button id="myAddGLPostingBtn">Make GL Posting<img src="~/Content/Images/loader2.gif" style="max-width: 50px;" class="loader icon"></button>
            </div>
        </div>

    </div>
</div>