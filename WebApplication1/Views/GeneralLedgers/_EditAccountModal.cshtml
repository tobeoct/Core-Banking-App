@model WebApplication1.ViewModels.GLAccountViewModel

<div id="myEditAccountModal" class="modal ">

    <!-- Modal content -->
    <div class="modal-content animated ">
        <span class="close">&times;</span>
        <div class="alert alert-danger alert-dismissible" id="errorMessage"></div>
        <div class="alert alert-success alert-dismissible" id="successMessage"></div>


        <div class=" padding-horizontal bordered-bottom align-left">
            <h3 class="alt-color bold-text">Add GL Account</h3>
        </div>
        <form class="padding-horizontal">
            <div class="row form-group ">
                <div class="margin-vertical">
                    <div class="col-md-3">
                        <label for="name">Name</label>
                    </div>
                    <div>
                        <input type="text" id="name" class="form-control" />

                    </div>
                </div>
            </div>


            <div class="row form-group ">
                <div class="margin-vertical">
                    <div class="col-md-3">
                        <label for="branch">Branch</label>
                    </div>
                    <div class="col-md-9">
                        <select id="branch" class="form-control">
                            <option value="0">-Select Branch-</option>
                            @{
                                foreach (var branch in Model.Branch)
                                {
                                    <option value="@branch.Id">@branch.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">

                <input type="hidden" id="hidden" />

            </div>
            <div class="align-right">
                <button id="myEditAccountBtn">Update GL Account<img src="~/Content/Images/loader2.gif" style="max-width: 50px;" class="loader icon" alt=""></button>
            </div>




        </form>
    </div>

</div>



