            //                var button = $(this);
            //                //alert("Delete");
            //                bootbox.confirm("Are you sure you want to delete this branch", function () {
            //                    if (result) {
            //                        $.ajax({
            //                            url: "api/generalledgercategories/" + button.attr("data-branch-id"),
            //                            method: "DELETE",
            //                            success: function () {
            //                                table.row(button.parents("tr")).remove().draw();
            //                            }
            //                        });
            //                    }
            //                });
            //            });

        });
    </script>
}
