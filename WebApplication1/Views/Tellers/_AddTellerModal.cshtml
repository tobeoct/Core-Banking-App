            <form id="tellerForm">
                <div class="row form-group ">
                    <div class="margin-vertical">
                        <div class="col-md-3">
                            <label>Users</label>
                        </div>
                        <div class="col-md-9">
                            <select class="form-control" id="userId" required>
                                <option value="0">Select User</option>
                                @foreach (var user in Model.Users)
                                {
                                    <option value="@user.Id">@user.FullName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row form-group ">
                    <div class="margin-vertical">
                        <div class="col-md-3">
                            <label>Available Till Accounts</label>
                        </div>
                        <div class="col-md-9">
                            <select class="form-control" id="tillAccountId" required>
                                <option value="0">Select Till Account</option>
                                @{
                                    var count = 0;
                                }
                                @foreach (var tillAccount in Model.TillAccounts)
                                {
                                    count= count + 1;
                                    <option value="@tillAccount.Id">@tillAccount.Name</option>
                                }
                                @{
                                    if (count == 0)
                                    {
                                        <option value="0" class="disabled">No Available Till Accounts</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
               <div class="align-right">  
                <button id="myAddTellerBtn">Add Teller<img src="~/Content/Images/loader2.gif" style="max-width: 50px;" class="loader icon"></button>  
